<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backround"
    tools:context=".ActivityUserShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNameShow"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewNameOnScreen"
            android:layout_width="256dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Empty"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="97dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="id"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewIdOnScreen"
            android:layout_width="264dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Empty"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="107dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="email"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewEmailOnScreen"
            android:layout_width="223dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Empty"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="110dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="phone"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewPhoneOnScreen"
            android:layout_width="260dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Empty"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonNextShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="goToNextActivity"
            android:text="Next"
            tools:ignore="OnClick" />
    </LinearLayout>
</LinearLayout>